{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Gurobi Project",
      "type": "shell",
      "command": "cl",
      "args": [
        "/EHsc",
        "/MD",
        "/std:c++20",
        "/openmp",    // параллелизм
        "/O2",        // оптимизация сборки под скорость работы кода 
        // "/arch:AVX2",
        "/I", "C:\\gurobi1203\\include",
        "/I", "${workspaceFolder}\\include",
        "src\\gurobi.cpp",
        "src\\main.cpp",
        "src\\prep_functions.cpp",
        "src\\preprocessing.cpp",
        "src\\parsing.cpp",
        "/link",
        "/LIBPATH:C:\\gurobi1203\\lib",
        "gurobi_c++.lib",
        "gurobi120.lib",
        "/OUT:prog.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$msCompile"],
    }
  ]
}
